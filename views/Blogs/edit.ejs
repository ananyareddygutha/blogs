<%- include("../partials/header") %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/new.css" />
</head>
<body>
    <%- include("../partials/nav") %>
    <h1 class="heading"><i class="far fa-edit fa-md"></i> Edit Post</h1>

    <form class="newForm" action="/blogs/<%= post._id %>?_method=PUT" method="POST">

        <div class="From-tag">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="ex. Find Yourself" value = "<%= post.title %>" required>
        </div>

        <div class="From-tag">
            <label for="image">Image</label>
            <input type="text" name="image" placeholder="paste image url" value = "<%= post.image %>" required>
        </div>

        <div class="From-tag">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="6" required><%= post.description %></textarea>
            <button type="submit" class="new">Post</button>
        </div>
   
    </form>   
    <%- include("../partials/footer") %>